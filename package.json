{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch\" \"npm run serve\" \"npm run client-dev\"",
    "start": "concurrently \"npm run watch\" \"npm run watch-client\" \"npm run serve\"",
    "serve": "nodemon --watch dist dist/index.js",
    "client-dev": "cd client && ./node_modules/.bin/ng serve",
    "watch": "nodemon --watch src -e ts,css,html,json,yaml -x \"npm run build\"",
    "watch-client": "nodemon --watch client/src -e ts,css,html,json -x \"npm run build-client\"",
    "build": "cd schemagen && npm run build && cd .. && node node_modules/schemagen/index.js && tsc -p .",
    "build-client": "cd client && npm run build",
    "test": "mocha --reporter spec --compilers ts:ts-node/register 'test/**/*.test.ts'"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "2500"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/chai": "^4.0.4",
    "@types/chai-http": "^3.0.3",
    "@types/debug": "0.0.30",
    "@types/express": "^4.0.37",
    "@types/mocha": "^2.2.43",
    "@types/mongodb": "^2.2.13",
    "@types/mongoose": "^4.7.23",
    "@types/morgan": "^1.7.33",
    "@types/node": "^8.0.34",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "concurrently": "^3.5.0",
    "mocha": "^4.0.1",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "debug": "^3.1.0",
    "del": "^3.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-http-proxy": "^1.0.7",
    "express-ws": "^3.0.0",
    "faker": "^4.1.0",
    "js-yaml": "^3.10.0",
    "moment": "^2.19.1",
    "mongoose": "^4.12.2",
    "morgan": "^1.9.0",
    "npm-watch": "^0.3.0",
    "run-sequence": "^2.2.0",
    "schemagen": "file:schemagen",
    "socket.io": "^2.0.3",
    "ws": "^3.2.0"
  }
}